<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/root_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/card_margin"
    android:background="@color/colorLight">

    <TextView
        android:id="@+id/class_item_timeframe"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/margin_item_content"
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/class_item_location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="@dimen/margin_item_content"
        android:textSize="16sp"/>

    <View
        android:id="@+id/class_item_separator"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@+id/class_item_timeframe"
        android:background="@color/cardview_light_background"/>

    <TextView
        android:id="@+id/class_item_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/class_item_separator"
        android:layout_margin="@dimen/margin_item_content"/>

</RelativeLayout>
